{
  "name": "Container Fundamentals Training Labs",
  "image": "quay.io/kubermatic-labs/training-ghcs-container-fundamentals-trainee-environment:1.0.4",
  "workspaceMount": "source=${localWorkspaceFolder},target=/training/,type=bind",
  "workspaceFolder": "/training/",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "files.exclude": {
          ".git/": true,
          ".gitignore": true,
          ".devcontainer/": true,
          ".99_todos/": true,
          "makefile": true
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      // workaround for https://github.com/devcontainers/features/issues/1494
      // which does not work all the time
      // should be removed once fixed
      "moby": false
    }
  },
  "remoteUser": "root",
  "privileged": true,
  "runArgs": [
    "--network=host",
    "--cgroupns=host"
  ],
  "forwardPorts": [
    80,
    8080
  ],
  "mounts": [
    {
      "source": "dind-var-lib-docker",
      "target": "/var/lib/docker",
      "type": "volume"
    }
  ]
}