{
  "name": "Container Fundamentals Training Labs",
  "image": "quay.io/kubermatic-labs/training-ghcs-container-fundamentals-trainee-environment:1.0.5",
  "workspaceMount": "source=${localWorkspaceFolder},target=/training/,type=bind",
  "workspaceFolder": "/training/",
  "customizations": {
    "vscode": {
      "settings": {
        "chat.agent.enabled": false,
        "chat.commandCenter.enabled": false,
        "chat.disableAIFeatures": true,
        "telemetry.feedback.enabled": false,
        "telemetry.telemetryLevel": "off",
        "workbench.editorAssociations": {
          "*.md": "vscode.markdown.preview.editor"
        },
        "workbench.settings.applyToAllProfiles": [
          "chat.agent.enabled",
          "chat.commandCenter.enabled",
          "chat.disableAIFeatures",
          "telemetry.feedback.enabled",
          "telemetry.telemetryLevel"
        ],
        "files.exclude": {
          ".git/": true,
          ".gitignore": true,
          ".devcontainer/": true,
          ".99_todos/": true,
          "makefile": true
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "remoteUser": "root",
  "privileged": true,
  "runArgs": [
    "--network=host",
    "--cgroupns=host"
  ],
  "forwardPorts": [
    80,
    8080
  ],
  "mounts": [
    {
      "source": "dind-var-lib-docker",
      "target": "/var/lib/docker",
      "type": "volume"
    }
  ]
}